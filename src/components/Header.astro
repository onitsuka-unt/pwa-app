---
import { BASE_URL } from '@/const';
---

<header class="header">
  <a href=`${BASE_URL}` class="link">PWA SAMPLE APP</a>
  <div class="header-container">
    <a href=`${BASE_URL}map/`>マップ</a>
    <a href=`${BASE_URL}price/`>料金</a>
  </div>
</header>

<style>
  .header {
    padding-inline: 16px;
    padding-block: 24px;
    display: grid;
    grid-template-columns: auto 1fr;
  }

  .header-container {
    justify-self: end;
    display: inline-grid;
    grid-template-columns: auto auto;
    column-gap: 16px;
  }

  .link {
    text-decoration: none;
    color: inherit;
    font-weight: bold;
  }
</style>
